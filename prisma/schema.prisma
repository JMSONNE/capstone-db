generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  username String
  password String
  name     String
  email    String @unique
  cart     Cart[]
  role     Role   @default(USER)
}

enum Role {
  USER
  ADMIN
  GUEST
}

model Product {
  id          Int    @id @default(autoincrement())
  name        String
  description String
  price       Float
  Cart        Cart[]
  cartId      Int?
}

model Cart {
  id        Int     @id @default(autoincrement())
  userId    Int
  productId Int
  products  Product @relation(fields: [productId], references: [id])
  user      User    @relation(fields: [userId], references: [id])
}
